@model Book
@{

}

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.PublishDate</p>
                <p class="card-text">@Model.AuthorName</p>
            </div>
        </div>
    </div>
</div>


<form asp-action="ReserveBookPost" method="post" class="row g-3">
    <div class="col-auto">
        <label for="userName" class="visually-hidden">User name</label>
        <input type="text" class="form-control-plaintext" id="userName" name="userName" placeholder="Sasuke">
        <input type="text" readonly class="form-control-plaintext" hidden="hidden" id="bookId" name="bookId" value="@Model.Id">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Reserve</button>
    </div>
</form>


